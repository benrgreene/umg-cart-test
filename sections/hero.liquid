      {
        "type": "header",
        "content": "Content"
      },
      {
      	"type": "text",
      	"id": "title",
      	"label": "Title"
      },
      {
      	"type": "textarea",
      	"id": "content",
      	"label": "Content"
      }
    ],
    "templates": [
      "page",
      "index",
      "collection",
      "product",
      "404",
      "blog"
    ],
    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}