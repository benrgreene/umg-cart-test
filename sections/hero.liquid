      {
      	"type": "select",
      	"id": "add_blur",
      	"label": "Add Blur Behind Content?",
      	"options": [
      		{ "label": "Yes", "value": "yes" },
      		{ "label": "No", "value": "no" }
      	],
      	"default": "yes"
