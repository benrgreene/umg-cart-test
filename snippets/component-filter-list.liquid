<template id="component-filter-list">
  <details class="border-0">
    <summary class="py-6 flex items-center justify-between cursor-pointer group">
      <p x-text="filter.label"
         class="lg:text-large text-secondary group-hover:text-secondary-active font-bold"></p>
      <span class="open-icon text-secondary group-hover:text-secondary-active">
        <svg xmlns="http://www.w3.org/2000/svg" height="1rem" viewBox="0 0 448 512"><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z" fill="currentColor"/></svg>
      </span>
      <span class="close-icon text-secondary group-hover:text-secondary-active">
        <svg xmlns="http://www.w3.org/2000/svg" height="1rem" viewBox="0 0 448 512">\<path d="M432 256c0 17.7-14.3 32-32 32L48 288c-17.7 0-32-14.3-32-32s14.3-32 32-32l352 0c17.7 0 32 14.3 32 32z" fill="currentColor"/></svg>
      </span>
    </summary>
    <div class="pb-6">
      <template x-for="(filterValue, filterValIndex) in filter.values">
        <div class="py-1 flex items-center">
          <input type="checkbox"
                 :id="`${filter.filterOptionId}=${filterValue.value}`"
                 :checked="$store.collectionInfo.activeFilters.includes(`${filter.filterOptionId}=${filterValue.value}`)"
                 @change="$store.collectionInfo.toggleFilter(filter.filterOptionId + '=' + filterValue.value)" />
          <label x-text="filterValue.label"
                 :for="`${filter.filterOptionId}=${filterValue.value}`"></label>
          <button @click="window.clearFilter(filter.filterOptionId + '=' + filterValue.value)"
                  x-show="$store.collectionInfo.activeFilters.includes(`${filter.filterOptionId}=${filterValue.value}`)"
                  class="ml-auto">
            <svg xmlns="http://www.w3.org/2000/svg" height="1rem" viewBox="0 0 384 512"><path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"/></svg>
          </button>
        </div>
      </template>
    </div>
  </details>
</template>