<div>
  {%- if address == customer.default_address -%}
    <p class="text-small">
      Default
    </p>
  {%- endif -%}

  {{- address | format_address -}}

  <button class="focus-link"
          data-edit-address="{{- address.id -}}">
    Edit Address
  </button>
  <div class="hidden"
       data-address-wrapper="{{- address.id -}}">
    {%- render 'address-form',
          address: address -%}
  </div>
</div>